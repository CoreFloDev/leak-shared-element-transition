<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.ActivityMain">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowEnterTransition">@transition/slide_up_animation</item>
        <item name="android:windowExitTransition">@transition/slide_up_animation</item>
    </style>

    <style name="AppTheme.ActivitySecond">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterTransition">@transition/slide_up_animation</item>
        <item name="android:windowExitTransition">@transition/slide_up_animation</item>
    </style>

</resources>
